<Window x:Class="UDPScreenShotWPFProgram.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UDPScreenShotWPFProgram"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="0.18*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Name="imageControl" Stretch="Uniform" />
        <UniformGrid Grid.Row="1" Columns="2">
            <Button Width="200" Height="50" FontSize="20" FontWeight="Black" Click="Screenshotclcik" Content="Screenshot" ></Button>
            <Button  Width="200" Height="50"   FontSize="20" FontWeight="Black" Click="SaveButton" >SaveImage</Button>
            
        </UniformGrid>

    </Grid>
</Window>
